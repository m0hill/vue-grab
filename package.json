{
  "name": "vue-grab-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Vue-grab monorepo",
  "type": "module",
  "scripts": {
    "build": "pnpm --filter vue-grab build",
    "dev": "pnpm --filter vue-grab dev",
    "dev:kitchen-sink": "pnpm --filter kitchen-sink dev",
    "dev:vue2": "pnpm --filter vue2-demo dev",
    "dev:nuxt": "pnpm --filter nuxt-demo dev",
    "lint": "pnpm --filter vue-grab lint",
    "lint:fix": "pnpm --filter vue-grab lint:fix",
    "format": "prettier --write .",
    "check": "pnpm --filter vue-grab check",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
