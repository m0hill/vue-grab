{
  "name": "vue-grab",
  "version": "0.0.1",
  "description": "Grab any element in your Vue app and give it to Cursor, Claude Code, etc. to change",
  "keywords": [
    "vue",
    "grab",
    "cursor",
    "claude",
    "code",
    "context",
    "changes",
    "modifications",
    "modification"
  ],
  "homepage": "https://github.com/m0hill/vue-grab#readme",
  "bugs": {
    "url": "https://github.com/m0hill/vue-grab/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m0hill/vue-grab.git"
  },
  "license": "MIT",
  "author": {
    "name": "Aiden Bai",
    "email": "aiden@million.dev"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugins/vite": {
      "import": {
        "types": "./dist/plugins/vite.d.ts",
        "default": "./dist/plugins/vite.js"
      },
      "require": {
        "types": "./dist/plugins/vite.d.cts",
        "default": "./dist/plugins/vite.cjs"
      }
    },
    "./dist/*": "./dist/*.js",
    "./dist/*.js": "./dist/*.js",
    "./dist/*.cjs": "./dist/*.cjs",
    "./dist/*.mjs": "./dist/*.mjs"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.global.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "NODE_ENV=production tsup",
    "dev": "tsup --watch --ignore-watch dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write .",
    "check": "eslint src/**/*.ts && prettier --check .",
    "publint": "publint",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.37.0",
    "eslint-plugin-perfectionist": "^4.15.1",
    "happy-dom": "^15.11.7",
    "publint": "^0.2.12",
    "terser": "^5.36.0",
    "tsup": "^8.2.4",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.46.1",
    "vite": "^6.0.11",
    "vitest": "^2.1.8",
    "vue": "^3.5.13"
  },
  "publishConfig": {
    "access": "public"
  }
}
